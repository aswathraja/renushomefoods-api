{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "/web/**/*",
        "outDir": "/dist/web"
    }, {"include": "templates/**/*",
        "outDir": "dist"}
    ]
  }
}
